{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["CI", "OPENCODE_DISABLE_SHARE"],
  "globalPassThroughEnv": ["CI", "OPENCODE_DISABLE_SHARE"],
  "tasks": {
    "typecheck": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "ironcode#test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "@ironcode-ai/app#test": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}
